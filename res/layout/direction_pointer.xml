<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DirectionPointerActivity" >

    <TextView
        android:id="@+id/destination_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" 
        android:textSize="20sp" android:gravity="center"/>

    <com.archerabi.wheredoigo.views.DirectionPointerCanvas
        android:id="@+id/direction_canvas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/destination_label"
        android:layout_alignParentBottom="true" />

</RelativeLayout>